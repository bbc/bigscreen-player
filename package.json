{
  "name": "bigscreen-player",
  "version": "6.0.0",
  "description": "Simplified media playback for bigscreen devices.",
  "main": "dist/esm/main.js",
  "browser": "dist/esm/main.js",
  "module": "dist/esm/main.js",
  "type": "module",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "prepare": "[ ! -d dist/ ] && npm run build || exit 0",
    "docs": "npm run docs:clean && npm run docs:build",
    "docs:clean": "rm -r ./docs/api",
    "docs:build": "jsdoc -c jsdoc.conf.json",
    "build": "npm run build:clean && npm run build:bundle",
    "build:clean": "rm -rf dist",
    "build:bundle": "rollup -c rollup.config.js",
    "watch": "rollup -c rollup.config.js -w",
    "start": "rollup -c rollup.dev.config.js -w",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "./scripts/lint-staged.sh && ./scripts/format-staged.sh",
      "pre-push": "npm test"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-alias": "^3.1.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-inject": "^4.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "babel-jest": "^27.0.6",
    "clean-jsdoc-theme": "^4.2.7",
    "eslint": "^8.27.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^4.2.5",
    "jest": "^27.0.6",
    "jsdoc": "^3.6.4",
    "prettier": "^2.7.1",
    "rollup": "^2.54.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-visualizer": "^5.5.2"
  },
  "dependencies": {
    "dashjs": "github:bbc/dash.js#smp-v3.2.0-8",
    "smp-imsc": "github:bbc/imscJS#v1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/bigscreen-player.git"
  },
  "keywords": [
    "BBC",
    "Media Player",
    "Video Playback",
    "TV",
    "Set Top Box",
    "Streaming"
  ],
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/bigscreen-player/issues"
  },
  "homepage": "https://github.com/bbc/bigscreen-player#readme"
}