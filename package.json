{
  "name": "bigscreen-player",
  "version": "8.0.2",
  "description": "Simplified media playback for bigscreen devices.",
  "main": "dist/esm/main.js",
  "browser": "dist/esm/main.js",
  "module": "dist/esm/main.js",
  "type": "module",
  "files": [
    "dist",
    "CONTRIBUTING.md"
  ],
  "scripts": {
    "prepare": "[ ! -d dist/ ] && npm run build || exit 0",
    "postinstall": "[ -d .git/ ] && husky install || exit 0",
    "docs": "jsdoc -c jsdoc.conf.json",
    "build": "npm run build:clean && npm run build:bundle",
    "build:clean": "rm -rf dist",
    "build:bundle": "rollup -c rollup.config.js",
    "watch": "rollup -c rollup.config.js -w",
    "start": "rollup -c rollup.dev.config.js -w",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-env": "^7.23.8",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "babel-jest": "^29.7.0",
    "better-docs": "^2.7.3",
    "clean-jsdoc-theme": "^4.2.7",
    "eslint": "^8.27.0",
    "eslint-plugin-jest": "^27.1.4",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdoc": "^4.0.2",
    "prettier": "^3.1.1",
    "rollup": "^3.29.4",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-visualizer": "^5.5.2",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dashjs": "github:bbc/dash.js#smp-v4.7.1-2",
    "smp-imsc": "github:bbc/imscJS#v1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/bigscreen-player.git"
  },
  "keywords": [
    "BBC",
    "Media Player",
    "Video Playback",
    "TV",
    "Set Top Box",
    "Streaming"
  ],
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/bigscreen-player/issues"
  },
  "homepage": "https://github.com/bbc/bigscreen-player#readme"
}
