{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["script"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
        "useLongnameInNav": true,
        "showInheritedInNav": true,
        "default": {
            "includeDate": false
        }
    },
    "opts": {
        "destination": "./docs/api",
        "encoding": "utf8",
        "recurse": true,
        "hierarchy": true,
        "readme": "docs/API.md",
        "template": "./node_modules/docdash",
        "tutorials": "./docs/tutorials"
    },
    "docdash": {
        "search": true,
        "typedefs": true,
        "collapse": true,
        "meta": {                      
            "title": "Bigscreen Player",                
            "description": "",          
            "keyword": ""               
        },
        "navLevel": 2,
        "menu": {                      
            "Github": {       
                "href":"https://github.com/bbc/bigscreen-player", 
                "target":"_blank",
                "class":"menu-item",
                "id":"website_link"
            },
            "NPM": {
                "href":"https://www.npmjs.com/package/bigscreen-player",
                "target":"_blank",
                "class":"menu-item",
                "id":"forum_link"
            }
        },
        "sectionOrder": [ 
            "Tutorials",
            "Classes",
            "Modules",
            "Externals",
            "Events",
            "Namespaces",
            "Mixins",
            "Interfaces"
       ]
    }
}