{
  "compileOnSave": true,
  "include": ["./"],
  "exclude": ["node_modules", "dist", "dist-local", "docs"],
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  }
}
